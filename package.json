{
  "name": "syncplay",
  "version": "1.0.0",
  "description": "Remote Queue Music Player with real-time WebSocket sync",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "node --watch server/index.js",
    "dev:client": "npm run dev --prefix client",
    "install-all": "npm install && npm install --include=dev --prefix client",
    "build": "npm run build --prefix client",
    "render-build": "npm run install-all && npm run build",
    "start": "node server/index.js",
    "preview": "npm run build && npm start"
  },
  "dependencies": {
    "express": "^4.21.0",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}